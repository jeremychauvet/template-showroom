root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

# Terraform.
[*.{tf,tfvars}]
indent_size = 2
indent_style = space

# Markdown.
[*.md]
max_line_length = 0
trim_trailing_whitespace = false

# Makefile.
[Makefile]
tab_width = 2
indent_style = tab

# VueJS and Javascript.
[*.{vue, js}]
indent_style = space
indent_size = 2

# Python.
[*.py]
indent_style = space
indent_size = 4

# YAML.
[*.{yaml, yml}]
indent_style = space
indent_size = 2

# Jenkins related files.
[*.groovy]
indent_style = space
indent_size = 2
[Jenkinsfile]
indent_style = space
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
